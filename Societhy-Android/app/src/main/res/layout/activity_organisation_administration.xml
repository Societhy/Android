    <LinearLayout
        android:id="@+id/toolbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/colorBlueToolBar">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_back_btn"
            android:paddingLeft="@dimen/padding_back_btn"
            android:paddingBottom="@dimen/padding_back_btn"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/tv_organisation_name"
            android:textSize="40sp"
            android:text="organisation"
            android:layout_weight="0.6"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_orga_picture"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_orga_picture"
        android:layout_below="@+id/toolbar"
        android:paddingTop="@dimen/padding_top_login_activity"
        android:text="admin"
        android:textSize="40sp"/>
</RelativeLayout>