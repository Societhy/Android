<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/padding_orga_user"
    android:layout_marginLeft="@dimen/padding_orga_user">

    <ImageView
        android:id="@+id/iv_row_orga_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cdprojekt"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_row_orga_name"
        android:text="CDProjekt"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_tv_orga_user"
        android:layout_below="@+id/iv_row_orga_picture" />


</RelativeLayout>