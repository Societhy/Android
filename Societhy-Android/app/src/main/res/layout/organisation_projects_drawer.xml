<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayPagerSelected">

    <TextView
        android:id="@+id/tv_organisation_projects"
        android:layout_width="wrap_content"
        android:text="Societhy Project"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="30dp"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lv_projects"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/default_margin_projects_drawer"
        android:layout_marginRight="@dimen/default_margin_projects_drawer"
        android:layout_marginBottom="@dimen/default_margin_projects_drawer"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>