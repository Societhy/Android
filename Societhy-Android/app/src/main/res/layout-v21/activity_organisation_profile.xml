<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jordan.societhy_android.Fragments.OrganisationProfileFragment">

    <!--<include
        android:id="@+id/toolbar"
        layout="@layout/app_bar_home">

    </include>-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreenToolBar"
        >
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_orga_picture"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tv_organisation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_orga_picture"
        android:text="admin"
        android:textSize="40sp"/>

</RelativeLayout>
